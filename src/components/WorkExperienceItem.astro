---
import type { CollectionEntry } from "astro:content";
import DateRange from "@components/DateRange.astro";

type Props = {
  xp: CollectionEntry<"experience">;
  presentLabel: string;
};

const { xp, presentLabel } = Astro.props;
---

<article class="flow">
  <header>
    <h3>{xp.data.company}</h3>
    <DateRange
      start={xp.data.start}
      end={xp.data.end}
      presentLabel={presentLabel}
    />
  </header>

  <h4>{xp.data.title}</h4>
  <p>{xp.data.description}</p>

  {xp.data.highlights?.length ? (
      <ul role="list">
        {xp.data.highlights.map((h) => (
          <li>{h}</li>
        ))}
      </ul>
    ) : null}

  {xp.data.badges?.length ? (
      <ul role="list">
        {xp.data.badges.map((b) => (
          <li>{b}</li>
        ))}
      </ul>
    ) : null}
</article>
