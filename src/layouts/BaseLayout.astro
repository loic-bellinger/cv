---
import type { CollectionEntry } from "astro:content";
import Head from "@components/Head.astro";
import LanguagePicker from "@components/LanguagePicker.astro";
import Navigation from "@components/Navigation.astro";
import { i18nConfig } from "@i18n/config";
import "@styles/reset.css";
import "@styles/global.css";

interface Props {
  title: string;
  description: string;
  image?: string | undefined;
  meta: CollectionEntry<"meta">["data"];
  ui: CollectionEntry<"ui">["data"];
}

const { title, description, image, meta, ui } = Astro.props;
const currentLocale = i18nConfig.normalizeLocale(Astro.currentLocale);
---

<html lang={currentLocale}>
  <Head
    title={title}
    description={description}
    image={image}
    meta={meta}
    locale={currentLocale}
  />
  <body>
    <a href="#content" class="skip-link">{ui.a11y.skipToMain}</a>
    <header>
      <Navigation nav={ui.nav} />
      <LanguagePicker />
    </header>
    <main id="content" tabindex="-1" class="wrapper flow">
      <slot />
    </main>
  </body>
</html>

<style>
.skip-link:not(:focus):not(:active) {
  clip-path: inset(50%);
  height: 1px;
  overflow: hidden;
  position: absolute;
  white-space: nowrap;
  width: 1px;
}
main:focus {
  outline: none;
}
</style>
