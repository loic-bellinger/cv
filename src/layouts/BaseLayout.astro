---
import type { CollectionEntry } from "astro:content";
import LanguagePicker from "@components/LanguagePicker.astro";
import Navigation from "@components/Navigation.astro";
import { i18nConfig } from "@i18n/config";

interface Props {
  pageTitle: string;
  ui: CollectionEntry<"ui">["data"];
}

const { pageTitle, ui } = Astro.props;
---

<html lang={i18nConfig.normalizeLocale(Astro.currentLocale)}>
  <head>
    <meta charset="utf-8">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="generator" content={Astro.generator}>
    <title>{pageTitle} â€” {ui.meta.titleSuffix}</title>
  </head>
  <body>
    <header>
      <a href="#main">{ui.a11y.skipToMain}</a>
      <Navigation nav={ui.nav} />
      <LanguagePicker />
    </header>
    <main id="main" tabindex="-1">
      <slot />
    </main>
  </body>
</html>
