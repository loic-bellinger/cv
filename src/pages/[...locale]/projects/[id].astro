---
import { getCollection, render } from "astro:content";
import { i18n } from "@i18n/runtime";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getEntryDataByLocale } from "@utils/data";

export async function getStaticPaths() {
  const projects = await getCollection("projects");

  return projects.map((project) => {
    const [lang, slug] = project.id.split("/");

    return {
      params: {
        locale: lang === i18n.defaultLocale ? undefined : lang,
        id: slug,
      },
      props: { project },
    };
  });
}

const { project } = Astro.props;
const { Content } = await render(project);

const ui = await getEntryDataByLocale("ui", Astro.currentLocale);
---

<BaseLayout pageTitle={project.data.title} ui={ui}>
  <Content />
</BaseLayout>
