---
import { getLocaleCollection } from "@i18n/content";
import { DEFAULT_LOCALE, LOCALES } from "@i18n/locales";
import { useI18n } from "@i18n/utils";
import BaseLayout from "@layouts/BaseLayout.astro";

export function getStaticPaths() {
  return LOCALES.map((locale) => ({
    params: {
      locale: locale === DEFAULT_LOCALE ? undefined : locale,
    },
  }));
}

const { locale, t, path } = useI18n(Astro.currentLocale);
const projects = await getLocaleCollection("projects", locale);
---

<BaseLayout pageTitle={t("page.projects.title")}>
  <ul>
    {projects.map((project) => {
      const slug = project.id.split('/').pop();
      return (
        <li>
          <a href={path(`projects/${slug}`)}>
            {project.data.title}
          </a>
        </li>
      );
    })}
  </ul>
</BaseLayout>
